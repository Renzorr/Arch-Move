---
import { Icon } from "astro-icon";

const PartnersLogo = [
  {
    name: "partner",
    title: "Nextmove",
  },
  {
    name: "partner",
    title: "Nextmove",
  },
  {
    name: "partner",
    title: "Nextmove",
  },
  {
